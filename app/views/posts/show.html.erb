<% content_for :title, "GOOD 4 Art - "+@post.title %>


<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Address:</strong>
  <%= @post.address %>
</p>
<% @images.each do |image| %>
  <%= image_tag image.pic.url(:medium) %>
<% end %>
<% if !@images.empty? %>
  <br />
<% end %>
<%= link_to "Add Image", new_post_image_path(@post), class: "fa fa-plus" %>
<%= link_to 'Edit', edit_post_path(@post), class: "fa fa-pencil" %> 
<%= link_to 'Back', posts_path, class: "fa fa-arrow-left" %>
