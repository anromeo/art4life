<div class="row">
  <% if current_user.id == @post.donor_id %>
    <div class="right small-4 columns">
      <%= link_to "Add Image", new_post_image_path(@post), class: "edit-links" %> |
      <%= link_to 'Edit', edit_post_path(@post), class: "edit-links" %> |
      <%= link_to "Delete", post_path(@post), method: :delete, class: "edit-links" %>
    </div>
  <% end %>
  <div class="post small-12 columns">
    <div class="post-title">
        <%= @post.title %>
    </div>
    <div class="post-description"><%= @post.description %></div>
    <div class="post-address"><%= @post.address %> <a href="http://maps.google.com/?q=<%= @post.address %>" target="_blank" class="fa fa-map-marker" title="View on map"> </a></div>
  </div>
  <% @images.each do |image| %>
    <%= image_tag image.pic.url(:medium) %>
  <% end %>
  <% if !@images.empty? %>
    <br />
  <% end %>
</div>